<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="@dimen/p140">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:paddingTop="@dimen/p35"-->
            <!--android:orientation="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/p30"
                    android:layout_marginLeft="@dimen/p30"
                    android:layout_weight="1"
                    android:textSize="@dimen/f28"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="姓名"/>
                <TextView
                    android:paddingLeft="@dimen/p16"
                    android:layout_marginTop="@dimen/p30"
                    android:layout_marginRight="@dimen/p30"
                    android:layout_weight="0"
                    android:textSize="@dimen/f28"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="电话电话电话电话"/>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:paddingLeft="@dimen/p30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/p10"
                android:text="详情地址"
                android:textSize="@dimen/f28"/>


        <!--</LinearLayout>-->


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/p30"
        android:paddingLeft="@dimen/p30"
        android:layout_height="@dimen/p85">

        <TextView
            android:id="@+id/tv_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_address_solid_color_primary"
            android:paddingLeft="@dimen/p32"
            android:paddingTop="@dimen/p8"
            android:paddingBottom="@dimen/p8"
            android:paddingRight="@dimen/p32"
            android:text="默认"/>

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_edit"
            android:drawablePadding="@dimen/p8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit"
            android:text="编辑"/>

        <TextView
            android:id="@+id/tv_remove"
            android:drawablePadding="@dimen/p8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/p16"
            android:drawableLeft="@drawable/ic_cart_delete"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>