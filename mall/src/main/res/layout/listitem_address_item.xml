<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fffced"
        android:layout_height="@dimen/p140">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="210"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/p30"
                android:paddingTop="@dimen/p35"
                android:text="地址"/>

            <TextView
                android:id="@+id/tv_is_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/p30"
                android:layout_marginTop="@dimen/p10"
                android:background="@drawable/shape_stroke_darkgray"
                android:text="默认"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="450"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/p10"
                android:paddingTop="@dimen/p35"
                android:text="电话"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/p10"
                android:paddingTop="@dimen/p10"
                android:text="详情地址"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/p10"
            android:layout_marginRight="@dimen/p30"
            android:layout_weight="0"
            android:src="@drawable/slic_all_receipt_edit"/>


    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/p30"
        style="@style/Line.Horizontal" />
</LinearLayout>