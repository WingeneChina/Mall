<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.wingene.mallxm.purchase1.CashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/slic_all_back"/>

        <TextView
            android:id="@+id/titleV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/three_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        style="@style/Line.Horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="44dp"
        android:paddingTop="23dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="@color/six_text_color"
                android:textSize="15sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/canCashShowV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可提现金额"
                android:textColor="@color/nine_text_color"
                android:textSize="15sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/cashEditV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_selector"
            android:drawableLeft="@drawable/money_tx"
            android:drawablePadding="5dp"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:textColor="@color/six_text_color"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="最低提现金额100   手续费2%"
            android:textColor="@color/six_text_color"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="转至"
            android:textColor="@color/six_text_color"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/addNewAccountGroupV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_selector"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_new_account"/>

            <TextView
                android:id="@+id/addNewAccountV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="添加新账户"
                android:textColor="@color/nine_text_color"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountMsgGroupV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_selector"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bankNameV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/nine_text_color"
                    android:textSize="13sp"
                    tools:text="中国银行"
                    />

                <View
                    style="@style/Line.Horizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bankCardNumberV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/nine_text_color"
                        android:textSize="13sp"
                        tools:text="卡号"
                        />

                    <TextView
                        android:id="@+id/bankCardUserNameV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/nine_text_color"
                        android:textSize="13sp"
                        tools:text="卡号"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/grzx_jt"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cashCommitV"
            android:layout_width="225dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="38dp"
            android:background="@drawable/login"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/three_text_color"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
