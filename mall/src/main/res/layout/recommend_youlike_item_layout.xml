<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/def_bg_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:background="@color/def_bg_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/youLikeItemImgV"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:placeholderImage="@drawable/placeholder"/>

            <TextView
                android:id="@+id/youLikeProductDesV"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/youLikeItemImgV"
                android:background="@color/def_bg_desc"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="100%原木浆,吸水不易破"
                android:textSize="12sp"/>
            <!--android:background="@color/translucent"-->
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/youLikeProductNameV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="古木一风 软抽面巾纸"
            android:textColor="@color/three_text_color"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/youLikeProductPriceV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:text="¥114"
                android:textColor="@color/deepRed"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/youLikeProductCanDeductible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="@color/deepRed"
                android:textSize="9sp"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>