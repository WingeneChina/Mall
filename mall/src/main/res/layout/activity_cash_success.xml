<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.wingene.mallxm.purchase1.CashSuccessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:padding="5dp"
            android:src="@drawable/slic_all_back"/>

        <TextView
            android:id="@+id/titleV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提现详情"
            android:textColor="@color/three_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:background="@drawable/line_gray_shape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cashStateImgV"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/cash_success"
                />

            <TextView
                android:id="@+id/cashStateDesV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:textColor="@color/six_text_color"
                android:textSize="16sp"
                tools:text="提现申请成功"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cashSuccessGroupV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="储蓄卡"
                android:textColor="@color/nine_text_color"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cardInfoV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/six_text_color"
                android:textSize="16sp"
                tools:text="中国银行  尾号 3190"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="提现金额"
                android:textColor="@color/nine_text_color"
                android:textSize="16sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cashV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/six_text_color"
                android:textSize="16sp"
                tools:text="￥1800"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cashCompletedV"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/three_text_color"
        android:textSize="15sp"/>
</LinearLayout>
