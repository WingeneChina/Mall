<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/p100"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:src="@drawable/slic_image_cb_enabled"
            android:layout_height="wrap_content"/>
        <View android:id="@+id/v_top" style="@style/Line.Vertical" android:layout_above="@id/iv_icon"
               android:layout_centerHorizontal="true" />

        <View android:id="@+id/v_bottom" style="@style/Line.Vertical" android:layout_below="@id/iv_icon"
               android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/p20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/p20"
            android:id="@+id/tv_station"
            android:text="客户 签收人: 本人签收 已签收 感谢使用圆通速递，期待再次为您服务"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/p4"
            android:id="@+id/tv_time"
            android:text="2017-06-24 16:01:49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View style="@style/Line.Horizontal" android:layout_marginTop="@dimen/p20" android:layout_marginRight="@dimen/p20"/>

    </LinearLayout>
</LinearLayout>