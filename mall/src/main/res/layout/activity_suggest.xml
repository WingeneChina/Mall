<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.wingene.mallxm.display.home.setting.SuggestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/slic_all_back"/>

        <TextView
            android:id="@+id/titleV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="意见与反馈"
            android:textColor="@color/three_text_color"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        style="@style/Line.Horizontal"/>

    <EditText
        android:id="@+id/suggestEditV"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yellow_linear"
        android:gravity="left"
        android:hint="说说你是用过程中的建议吧..."
        android:padding="15dp"
        android:textColor="@color/six_text_color"
        android:textSize="13sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/yellow_linear"
        android:orientation="horizontal"
        android:padding="9dp">

        <ImageView
            android:id="@+id/addSuggestV"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:src="@drawable/add_new_account"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/suggestRecyclerV"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/suggestCommitV"
        android:layout_width="225dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/three_text_color"
        android:textSize="15sp"/>
</LinearLayout>
