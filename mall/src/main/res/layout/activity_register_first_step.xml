<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.wingene.mallxm.account.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/sjdl_y"/>

        <TextView
            android:id="@+id/titleV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注册光合"
            android:textColor="@color/three_text_color"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:src="@drawable/sjdl_logo"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        >

        <AutoCompleteTextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/sjdl_sjh"
            android:drawablePadding="10dp"
            android:hint="请输入你的手机号"
            android:imeActionId="@+id/next"
            android:imeActionLabel="下一个"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        >

        <EditText
            android:id="@+id/verifiCodeV"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:drawableLeft="@drawable/zc_yzm"
            android:drawablePadding="10dp"
            android:hint="请输入验证码"
            android:imeActionId="@+id/login"
            android:imeActionLabel="下一步"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"/>

        <Button
            android:id="@+id/requestVerificodeV"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/login"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="点击获取验证码"
            android:textColor="@color/menu_selected_color"
            android:textSize="12sp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:text="注册代表您同意用户协议"
        android:textColor="@color/six_text_color"
        android:textSize="12sp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/registerNextV"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/login"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/six_text_color"
        android:textSize="14sp"/>
</LinearLayout>

