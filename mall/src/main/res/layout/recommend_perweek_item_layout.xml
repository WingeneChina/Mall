<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:stateListAnimator="@animator/raise">

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/perWeekProductImgV"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:backgroundImage="@color/blue"
            app:placeholderImage="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:id="@+id/perWeekMarkGroupV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/perWeekItemMarkOneV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_shape"
                    android:text="爆品"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/perWeekItemMarkTwoV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/perWeekItemMarkOneV"
                    android:background="@drawable/orange_shape"
                    android:text="满赠"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/perWeekProductNameV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="8"
                android:maxLines="1"
                android:text="我是商品啊哈哈哈哈阿德"
                android:textColor="@color/three_text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/perWeekProductDesV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxEms="18"
                android:maxLines="1"
                android:text="啦啦啦啦啦"
                android:textColor="@color/six_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/perWeekProductPriceV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="¥"
                android:textColor="@color/deepRed"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>