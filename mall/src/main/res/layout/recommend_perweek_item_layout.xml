<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="wrap_content"
    android:background="@color/def_bg_image"
    >

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@color/def_bg_image"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/perWeekProductImgV"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            app:placeholderImage="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/perWeekMarkGroupV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                >

                <TextView
                    android:id="@+id/perWeekItemMarkOneV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_shape"
                    android:text="爆品"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/perWeekItemMarkTwoV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/perWeekItemMarkOneV"
                    android:background="@drawable/orange_shape"
                    android:text="满赠"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/perWeekProductNameV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxEms="8"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:textColor="@color/three_text_color"
                android:textSize="13sp"
                tools:text="我是商品啊哈哈哈哈阿德"/>

            <TextView
                android:id="@+id/perWeekProductDesV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxEms="18"
                android:maxLength="10"
                android:maxLines="1"
                tools:text=""
                android:textColor="#888888"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/perWeekProductPriceV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#b4282d"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/perWeekanDeductible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/deepRed"
                    android:textSize="9sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>