<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/ListItem"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/p30"
        android:layout_marginLeft="@dimen/p30"
        android:layout_marginTop="@dimen/p30"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/f32"
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="描述"/>

        <TextView
            android:textColor="@color/darkgray"
            android:textSize="@dimen/f28"
            android:layout_marginTop="@dimen/p10"
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="时间"/>

    </LinearLayout>

    <TextView
        android:textSize="@dimen/f36"
        android:layout_gravity="center"
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/p30"
        android:layout_weight="0"
        android:text="+150"/>


</LinearLayout>