<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/zc_bg"
    tools:context="cn.wingene.mallxm.account.LoginChoiceActivity">


    <ImageView
        android:id="@+id/cancelV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zc_qx"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wxLogin"
                android:layout_width="133dp"
                android:layout_height="38dp"
                android:background="@drawable/login"
                android:drawableLeft="@drawable/zc_wx"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="微信登录"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/qqLogin"
                android:layout_width="133dp"
                android:layout_height="38dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/login"
                android:drawableLeft="@drawable/zc_qq"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="QQ登录"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/usePhoneLoginV"
            android:layout_width="277dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/yellow_dotted_line_shape"
            android:gravity="center"
            android:text="使用手机号注册"
            android:textColor="@color/three_text_color"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有光合账号?"
                android:textColor="@color/three_text_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/clickLoginV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/have_account"
                android:textColor="@color/three_text_color"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
