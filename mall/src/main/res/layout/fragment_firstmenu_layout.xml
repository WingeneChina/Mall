<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/menuGroup_bg"/>

        <TextView
            android:id="@+id/searchMarkV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@color/translucent"
            android:gravity="center"
            android:text="搜索商品,共xxx款"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/ShoppingCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:background="@color/menuGroup_bg"
            />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        app:paddingEnd="10dp"
        app:paddingStart="10dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/yellow_mall"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/menu_selected_color"
        app:tabTextColor="@color/menu_unSelected_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menuGroup_bg"
        android:scrollbars="horizontal"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/contentPagerV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>