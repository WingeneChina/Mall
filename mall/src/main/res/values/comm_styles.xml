<?xml version="1.0" encoding="utf-8"?>
<!-- 工程级 样式,以全称写样式 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Line"></style>

    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Line.Vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView" parent="@style/Widget">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/comm_font_normal</item>
        <item name="android:textColor">@color/comm_font_normal</item>
    </style>

    <style name="TextView.Content">
        <item name="android:gravity">left|top</item>
    </style>

    <style name="EditText" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/comm_edittext_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/comm_edittext_horizontal_padding</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="EditText.Single">
        <item name="android:maxLength">32</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.Content" parent="TextView">
        <item name="android:paddingTop">@dimen/pxd16_360xh</item>
        <item name="android:paddingBottom">@dimen/pxd16_360xh</item>
        <item name="android:maxLength">512</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="EditText.Transparent">
        <item name="android:background">@null</item>
    </style>

    <style name="Button" parent="@style/TextView"></style>

    <style name="Button.Transparent">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- <style name="Button.TextView"></style> -->

    <style name="ImageView" parent="@style/Widget">
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="RadioButton" parent="@style/Widget"></style>

    <style name="RadioButton.Tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout" parent="@style/Layout"></style>

    <style name="RelativeLayout" parent="@style/Layout"></style>

    <style name="RelativeLayout.Content">
        <item name="android:padding">@dimen/pxd10_360xh</item>
    </style>

    <style name="LinearLayout.Vertical">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout.Horizotal">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearLayout.ActionBarBox">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">@dimen/height_action_bar</item>
        <item name="android:layout_width">@dimen/height_action_bar</item>
        <item name="android:minWidth">@dimen/height_action_bar</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayout.ActionBarBox.onClick">
        <item name="android:onClick">onClickOfActionBarBox</item>
    </style>

    <style name="TableLayout" parent="@style/Layout"></style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

</resources>